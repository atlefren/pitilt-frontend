{
  "// docs, basically" : "https://github.com/paulirish/sublime-jsfmt#formatting-rules",
  "plugins": [
        "esformatter-quotes",
        //"esformatter-semicolons",
        "esformatter-braces",
        "esformatter-remove-trailing-commas",
        "esformatter-jsx"
    ],
    "jsx": {
      "formatJSX": true,
      // change these to your preferred values
      // refer to https://github.com/royriojas/esformatter-jsx#best-configuration for more options
      "attrsOnSameLineAsTag": false, 
      "maxAttrsOnTag": 1,
      "firstAttributeOnSameLine": true,
      "alignWithFirstAttribute": true,
      "htmlOptions": {
        "indent_char": " ",
        "indent_size": 4
      }

    },
    "quotes": {
        "type": "single",
        "avoidEscape": false
    },
    "indent": {
        "value": "    "  // four spaces, b.
    },
     "whiteSpace" : {
         "before" : {
             "FunctionName" : 1,
             "FunctionExpressionOpeningBrace" : 1,
             "FunctionExpressionClosingBrace" : 1,
             "ModuleSpecifierClosingBrace": 0
         },
         "after" : {
            "ModuleSpecifierOpeningBrace": 0,
             "FunctionReservedWord": 1,
             "FunctionName" : 0,
             "FunctionExpressionOpeningBrace" : 1,
             "FunctionExpressionClosingBrace" : 1
         }
     }
 
}
